generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Movie {
  id                String      @id @default(uuid())
  title             String      @unique
  description       String
  duration          Int
  releaseDate       DateTime
  rating            Float       @default(0.0)
  thumbnail         String
  thumbnailPublicId String
  trailerUrl        String
  trailerPublicId   String?
  genres            Genres[]
  isActive          Boolean     @default(true)
  status            MovieStatus @default(COMING_SOON)
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([title], name: "idx_movie_title")
  @@index([createdAt], name: "idx_movie_created_at")
  @@map("movies")
}

model Genres {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  isActive    Boolean  @default(true)
  movies      Movie[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([name], name: "idx_genres_name")
  @@map("genres")
}

enum MovieStatus {
  COMING_SOON
  NOW_SHOWING
  ENDED
}
