generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cinema {
  id        String   @id @default(uuid())
  name      String   @unique
  address   String
  city      String
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Room      Room[]

  @@map("cinemas")
}

model Room {
  id         String   @id @default(uuid())
  name       String
  cinemaId   String
  cinema     Cinema   @relation(fields: [cinemaId], references: [id])
  totalSeats Int
  seatLayout Json
  isActive   Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  Seat       Seat[]

  @@unique([cinemaId, name])
  @@map("rooms")
}

model Seat {
  id         String   @id @default(uuid())
  roomId     String
  room       Room     @relation(fields: [roomId], references: [id])
  seatNumber String
  seatType   String   @default("NORMAL")
  extraPrice Float    @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([roomId, seatNumber])
  @@map("seats")
}
