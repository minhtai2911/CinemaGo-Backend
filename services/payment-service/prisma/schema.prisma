generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        String   @id @default(uuid())
  bookingId String
  userId    String
  method    String
  amount    Int
  status    String   @default("Chờ thanh toán")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([bookingId], name: "idx_payment_booking_id")
  @@map("payments")
}
