generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Showtime {
  id        String   @id @default(uuid())
  movieId   String
  roomId    String
  cinemaId  String
  startTime DateTime
  endTime   DateTime
  price     Int
  language  String   @default("vi")
  subtitle  Boolean  @default(true)
  format    String   @default("2D")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([movieId], name: "idx_showtime_movie_id")
  @@index([roomId], name: "idx_showtime_room_id")
  @@map("showtimes")
}
