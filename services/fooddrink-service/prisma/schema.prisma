generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FoodDrink {
  id          String        @id @default(uuid())
  name        String
  price       Int
  image       String
  publicId    String
  description String
  isAvailable Boolean       @default(true)
  type        FoodDrinkType
  cinemaId    String
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@unique([name, cinemaId], name: "unique_fooddrink_per_cinema")
  @@map("food_drinks")
}

enum FoodDrinkType {
  SNACK
  DRINK
  COMBO
}
